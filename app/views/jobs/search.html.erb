 </div>

  <br />
  <% if !@jobs  %>
    <h1 style="text-align:center"> 对不起，没有您要找的工作  </h1>
  <% else %>
    <table class="table table-boldered">
        <thead>
            <tr>
                <td>职位</td>
                <td>薪资下限</td>
                <td>薪资上限</td>
                <td>发布时间</td>
            </tr>

        </thead>
        <tbody>
            <% @jobs.each do |job| %>
            <tr>
                <td>
                    <%= link_to(job.title, job_path(job)) %>
                </td>
                <td>
                    <%= job.wage_lower_bound %>
                </td>
                <td>
                    <%= job.wage_upper_bound %>
                </td>
                <td>
                    <%= job.created_at %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
  <% end %>
</div>

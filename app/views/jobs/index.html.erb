<div class="container">
<div class ="row">
 <div class="col-sm-6 col-sm-offset-3">
	 <div class="imaginary_container">
	 	<div class="row">
	     <div id="custom-search-input">
	        <div class="input-group col-md-12">
	          <%= form_tag search_jobs_path , :method => :get, :class => "jobs-search-form" do %>
	            <div class="input-group">
	              <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="职位搜索">
	              <span class="input-group-btn">
	                <button type="submit" class="btn btn-info">
	                  <span class="glyphicon glyphicon-search"></span>
	                </button>
	              </span>
								<div class="dropdown clearfix pull-right">
										<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
											筛选排序
												<span class="caret"></span>
										</button>
									<ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider ">
										 <li>
											 <%= link_to("按薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
											 <li class="divider"> </li>
										 </li>
										 <li>
											 <%= link_to("按薪资上限排序", jobs_path(:order => "by_upper_bound")) %>
											 <li class="divider"> </li>
										 </li>
										 <li>
											 <%= link_to("按发表时间排序", jobs_path) %>
										 </li>
									</ul>
								</div>
	            </div>
	          <% end %>
	        </div>
	     </div>

	   	</div>
	 </div>
 </div>
 </div>

</div>
</div>
<br />
<div class="container">
<table class="table table-boldered">
    <thead>
        <tr>
            <td>职位</td>
            <td>薪资下限</td>
            <td>薪资上限</td>
            <td>发布时间</td>
        </tr>

    </thead>
    <tbody>
        <% @jobs.each do |job| %>
        <tr>
            <td>
                <%= link_to(job.title, job_path(job)) %>
            </td>
            <td>
                <%= job.wage_lower_bound %>
            </td>
            <td>
                <%= job.wage_upper_bound %>
            </td>
            <td>
                <%= job.created_at %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>

<div class="text-center">
  <%= will_paginate @posts %>
</div>
